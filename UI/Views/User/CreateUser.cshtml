@model UserViewModel

@using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
{
    <h3>Create user</h3>
    <h6>Email Address</h6>
    <input id="EmailAddress" type="text" />
    <br>
    <br>
    <h6>First Name</h6>
    <input id="FirstName" type="text" />
    <br>
    <br>
    <h6>Last Name</h6>
    <input id="LastName" type="text" />
    <br>
    <br>
    <h6>Password</h6>
    <input id="Password" type="text" />
    <br>
    <br>
    <h6>Type of User</h6>
    @Html.DropDownListFor(x => x.Type, Html.GetEnumSelectList<NoSQL.Models.UserType>())
    <br>
    <br>
    <h6>Phone Number</h6>
    <input id="PhoneNumber" type="text" />
    <br>
    <br>
    <h6>Type of User</h6>
    @Html.DropDownListFor(x => x.Location, Html.GetEnumSelectList<NoSQL.Models.UserLocation>())
    <br>
    <br>
    <button type="submit">Create user</button>
}
