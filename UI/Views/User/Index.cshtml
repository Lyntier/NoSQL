@using System.Globalization
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h2>Users</h2>
<button>@Html.ActionLink("Add new user", "CreateUser", "User")</button>
<table class="table">

    <tr>
        <th>First Name </th>
        <th>Last Name </th>
        <th>Email</th>

    </tr>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td>@user.EmailAddress</td>

    </tr>

    }
</table>

<br />
<br />
@* Easy segment for showing any potential modelstate errors *@

@foreach (var modelState in ViewData.ModelState.Values)
{
    @foreach (var error in modelState.Errors)
    {
        <text>@error.ErrorMessage</text>
    }
}




