@using System.Globalization
@model IEnumerable<TicketViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Tickets</h2>
<button>@Html.ActionLink("Create incident","CreateTicket","Ticket")</button>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Subject</th>
        <th>User</th>
        <th>Date reported</th>
        <th>Deadline</th>
    </tr>
    @foreach (var ticket in Model)
    {
        <tr>
            <td>@ticket.Id</td>
            <td>@ticket.Subject</td>
            <td>@ticket.User.LastName, @ticket.User.FirstName</td>
            <td>@ticket.DateReported.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            <td>@ticket.Deadline</td>
        </tr>
    }
</table>

<br/>
<br/>

@* Easy segment for showing any potential modelstate errors *@
@foreach (var modelState in ViewData.ModelState.Values)
{
    @foreach (var error in modelState.Errors)
    {
        <text>@error.ErrorMessage</text>
    }
}